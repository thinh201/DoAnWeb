@model DoAnWeb.Models.AdminMenu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div class="pagetitle">
        <h2>Xác nhận thêm MenuAdmin</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới MenuAdmin</h2>
        </div>
        <form method="post" asp-action="Create" asp-controller="AdminMenu">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ItemName">MenuName</label>
                    <input type="text" class="form-control mb-3" asp-for="ItemName" placeholder="Nhập tên menu" />
                    <span asp-validation-for="ItemName" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ItemLevel">Levels</label>
                <select asp-for="ItemLevel" class="form-select" id="Levels">
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ControllerName">Controller</label>
                <input type="text" class="form-control mb-3" asp-for="ControllerName" placeholder="Enter Link" />
                <span asp-validation-for="ControllerName" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ActionName">Action</label>
                <input type="text" class="form-control mb-3" asp-for="ActionName" placeholder="Enter Link" />
                <span asp-validation-for="ActionName" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ItemOrder">Menu cha</label>
                <select class="form-control" asp-for="ParentLevel" asp-items="@ViewBag.mnList">
                    <option value="0">Không có menu cha</option>
                </select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ItemOrder">MenuOrder</label>
                <input type="number" class="form-control mb-3" asp-for="ItemOrder" placeholder="Enter MenuOrder" />
                <span asp-validation-for="ItemOrder" class="alert-danger"></span>
            </div>
                <div class="form-group mt-5 mb-5">
                    <lable>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </lable>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill">Lưu</i></button>
            <a asp-controller="AdminMenu" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
