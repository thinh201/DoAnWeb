@using DoAnWeb.Ultilities;
@model DoAnWeb.Models.User;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1 class="text-center">Chỉnh sửa thông tin người dùng</h1>
</div><!-- End Page Title -->

<section class="section mt-4">

    <div class="form-addnew d-flex">
        <div class="col-md-9">
            <form asp-action="Edit" class="row" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="text" hidden asp-for="UserId" value="@Model.UserId" class="form-control">
                <input type="text" hidden asp-for="Password" value="@Model.Password" class="form-control">
                <input type="text" hidden asp-for="IsBlocked" value="@Model.IsBlocked" class="form-control">
                <input type="text" hidden name="OldAvatar" value="@Model.Avatar" class="form-control">

                <div class="col-md-6">
                    <label for="inputEmail5" class="form-label">Tên tài khoản</label>
                    <input type="text" asp-for="UserName" placeholder="Ten tai khoan" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="inputName5" class="form-label">Họ và tên</label>
                    <input type="text" asp-for="FullName" placeholder="Ho va ten" class="form-control">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputAddress5" class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="abcde@gmail.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputAddress2" class="form-label">Điện thoại</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="08671xxxxx">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="inputCity" class="form-label">Phân quyền</label>
                    <select class="form-control" asp-for="RoleId" asp-items="@ViewBag.listRoles">
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="inputCity" class="form-label">Ảnh đại diện</label>
                    <input asp-for="Avatar"
                           name="avatar"
                           value=""
                           type="file"
                           class="form-control image-input"
                           onchange="document.getElementById('imagePreview').src=window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Cập nhật ngay</button>
                    <a class="btn mx-3 btn-secondary" asp-action="Index" asp-controller="Account" asp-area="Admin">Hủy bỏ</a>
                </div>
            </form>
        </div>
        <div class="col-md-3">
            <div class="avt-box px-4">
                <img id="imagePreview" src="~/images/@Model.Avatar" style="width:100%" />
            </div>
        </div>
    </div>
    
</section>


