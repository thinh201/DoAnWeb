@{
    ViewData["Title"] = "Giá thuê xe";
}
@model IList<DoAnWeb.Models.Car>
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="/">Trang chủ <i class="ion-ios-arrow-forward"></i></a>
                    </span> <span>Mức giá <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Giá cả</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="car-list">
                    <table class="table">
                        <thead class="thead-primary">
                        <tr class="text-center">
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                            <th class="bg-primary heading">Giá thuê</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var car in Model)
                        {
                            <tr class="">
                                <td class="car-image">
                                    <div class="img" style="background-image:url(@car.CarImages.LastOrDefault()?.ImageUrl);"></div>
                                </td>
                                <td class="product-name">
                                    <h3>@car.Brand @car.Model</h3>
                                    <p class="mb-0 rated">
                                        <span>Đánh giá:</span>
                                        <span class="ion-ios-star"></span>
                                        <span class="ion-ios-star"></span>
                                        <span class="ion-ios-star"></span>
                                        <span class="ion-ios-star"></span>
                                        <span class="ion-ios-star"></span>
                                    </p>
                                </td>

                                <td class="price">
                                    <p class="btn-custom car-data-container" data-id="@car.CarId" data-price="@car.PricePerDay" data-name="@car.Brand @car.Model" data-image="@car.CarImages?.LastOrDefault()?.ImageUrl">
                                        <a data-bs-toggle="modal" data-bs-target="#book-car-modal">Đặt xe</a>
                                    </p>
                                    <div class="price-rate">
                                        <h3>
                                            <span class="num">
                                                <small class="currency">đ</small> @car.PricePerDay?.ToString("#,00#")
                                            </span>
                                            <span class="per">/Ngày</span>
                                        </h3>
                                    </div>
                                </td>
                            </tr>
                            <!-- END TR-->
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>