@model IList<Blog>
@{
    ViewData["Title"] = "Bài viết";
}
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url(&quot;images/bg_3.jpg&quot;); height: 651px; background-position: 50% 0px;" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start" style="height: 651px;">
            <div class="col-md-9 ftco-animate pb-5 fadeInUp ftco-animated">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="/">Trang chủ <i class="ion-ios-arrow-forward"></i></a>
                    </span> <span>Bài viết<i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Bài viết của chúng tôi</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach (var post in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate fadeInUp ftco-animated">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a asp-action="Detail" asp-controller="Blog" asp-route-id="@post.BlogId" asp-route-slug="@post.BlogSlug" class="block-20 img" style="background-image: url('@post.BlogImage');">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div>
                                    <a href="#">@post.CreatedDate?.ToString("dd/MM/yyyy")</a>
                                </div>
                                <div>
                                    <a href="#">@post.CreatedBy?.FullName</a>
                                </div>
                                <div>
                                    <a href="#" class="meta-chat">
                                        <span class="icon-chat"></span>@post.BlogViewCount
                                    </a>
                                </div>
                            </div>
                            <h3 class="heading mt-2">
                                <a href="#">@post.BlogTitle</a>
                            </h3>
                            <p>@post.BlogDesc</p>
                            <p>
                                <a asp-action="Detail" asp-controller="Blog" asp-route-id="@post.BlogId" asp-route-slug="@post.BlogSlug" class="btn btn-primary">Đọc thêm <span class="icon-long-arrow-right"></span></a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li>
                            <a href="#">&lt;</a>
                        </li>
                        <li class="active">
                            <span>1</span>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#">&gt;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>